font-family = "JetBrains Mono"
font-size = 14
font-thicken = true
font-thicken-strength = 64

adjust-cell-height = 20%
adjust-underline-position = 3
adjust-underline-thickness = 0

window-padding-x = 10
window-padding-balance = true
window-padding-color = extend

env = GHOSTTY_THEME_MODE=light
theme = "morningstar_light"

macos-titlebar-style = tabs
macos-window-shadow = false

macos-option-as-alt = false

cursor-style = bar
mouse-hide-while-typing = true

custom-shader = ./shaders-custom/cursor_smear_2.glsl
custom-shader-animation = true

quick-terminal-position = center

background-image = ./background.jpg
background-image-fit = cover
background-image-opacity = 0.1

keybind = global:shift+cmd+j=toggle_quick_terminal

keybind = super+w=unbind
keybind = super+alt+w=close_surface
keybind = alt+left=unbind
keybind = alt+right=unbind
keybind = super+left=unbind
keybind = super+right=unbind

# This tells Ghostty to send the Alt modifier for backspace
keybind = alt+backspace=text:\x1b\x7f

keybind = super+backspace=unbind

# @see https://github.com/ghostty-org/ghostty/discussions/2811
keybind = performable:super+v=paste_from_clipboard
keybind = performable:super+c=copy_to_clipboard

keybind = super+enter=unbind

keybind = super+shift+p=unbind
keybind = super+alt+p=toggle_command_palette

keybind = shift+enter=unbind

keybind = super+f=unbind
keybind = super+alt+f=start_search


